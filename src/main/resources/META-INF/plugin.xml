<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>com.ininids.aam-helper</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Aam-Helper</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://ininids.in.rs">INiNiDS</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        A small plugin to help with AAM files. It provides syntax highlighting, code completion, and a tool window for easy access to AAM-related features.
    ]]></description>s

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyMessageBundle</resource-bundle>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="AAM File" implementationClass="com.ininids.aamhelper.language.AamFileType"
                  fieldName="INSTANCE" language="AAM" extensions="aam"/>
        <lang.parserDefinition language="AAM" implementationClass="com.ininids.aamhelper.language.AamParserDefinition"/>
        <lang.syntaxHighlighterFactory language="AAM"
                                       implementationClass="com.ininids.aamhelper.language.AamSyntaxHighlighterFactory"/>
        <annotator language="AAM" implementationClass="com.ininids.aamhelper.language.AamAnnotator"/>
        <toolWindow id="MyToolWindow" factoryClass="com.ininids.aamhelper.MyToolWindowFactory"
                    icon="AllIcons.Toolwindows.ToolWindowPalette"/>

        <psi.referenceContributor language="AAM" implementation="com.ininids.aamhelper.language.AamReferenceContributor"/>
        <completion.contributor language="AAM" implementationClass="com.ininids.aamhelper.language.AamCompletionContributor"/>
        <lang.psiStructureViewFactory language="AAM" implementationClass="com.ininids.aamhelper.language.AamStructureViewFactory"/>
        <lang.formatter language="AAM" implementationClass="com.ininids.aamhelper.language.AamFormattingModelBuilder"/>
        <lang.commenter language="AAM" implementationClass="com.ininids.aamhelper.language.AamCommenter"/>
        <breadcrumbsInfoProvider implementation="com.ininids.aamhelper.language.AamBreadcrumbsProvider"/>
        <enterHandlerDelegate implementation="com.ininids.aamhelper.language.AamEnterHandler"/>
    </extensions>
</idea-plugin>